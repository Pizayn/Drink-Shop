@model DrinkShop.WebUI.Models.ProductListViewModel

@{
    
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row" style="margin-top: 40px;">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList");
    </div>
    <div class="col-md-9">
        
        <a class="btn-success" asp-controller="Admin" asp-action="Add">Add Product</a>
        <table class="table table-stripped">
            <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>UnitInStock</th>
                <th>Unit Price</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><img src="/Upload/@product.Image" width="50px;" height="50px;"/></td>
                    <td>@product.ProductName</td>
                    <td>@product.UnitInStock</td>
                    <td>@product.UnitPrice€</td>
                    <td ><a class="btn-warning" asp-controller="Admin" asp-action="Delete" asp-route-Id="@product.Id"asp-route-Image="@product.Image">Delete</a></td>
                    <td><a class="btn-success" asp-controller="Admin" asp-action="Update" asp-route-productId="@product.Id"asp-route-subCategoryId="@product.SubCategoryId">Update</a></td>
                   
                </tr>
            }

            </tbody>
        </table>
    </div>
   
</div>
